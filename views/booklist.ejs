<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="styles.css">
    </head>
    <h1>Booklist</h1>
    <body>
        <div class="content">
            <form id="add-books-form">
                <input type="text" name="name" placeholder="輸入 Book's name">
                <input type="text" name="gender" placeholder="輸入 Book's author">
                <input type="text" name="age" placeholder="輸入 Book's ISBN">
                <button> Add a Book </button> 
            </form>
            <table id="stu-table" cellpadding="10" border="1" width="100%">
                　<tr>
                　  <td>書名</td>
                　  <td>作者</td>
                    <td>ISBN</td>
                    <td>刪除</td>
                　</tr>
                <% for(let i = 0 ; i < users.length; i++) {%>
                    <tr data-id="<%= users[i].id %>">
                        <td><%= users[i].name %></td>
                        <td><%= users[i].author %></td>
                        <td><%= users[i].ISBN %></td>
                        <td><div id="cross-family" cross-id="<%= users[i].id %>">x</div></td>
                    </tr>
                <% } %>
            </table>
        </div>
    </body>
    <script src="backend_setEvent.js"></script>
    
</html>